#!/usr/bin/env bash

dotfiles=$HOME/dotfiles
. $dotfiles/etc/header

#--------------------------------------------------------------#
##        vim                                                 ##
#--------------------------------------------------------------#
echo ""
info "Start install vim."

cd $dotfiles/vim
git pull origin master

./configure
sudo make
sudo make install

cd $dotfiles

info "Complete install vim."

#--------------------------------------------------------------#
##        neovim                                              ##
#--------------------------------------------------------------#
echo ""
info "Start install neovim."

cd $dotfiles/neovim
git pull origin master

sudo rm -rf build
sudo make CMAKE_BUILD_TYPE=Release
sudo make install

cd $dotfiles

info "Complete install neovim."
